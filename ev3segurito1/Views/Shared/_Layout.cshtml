<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Mi Aplicación</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Mi Aplicación</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Cerrar Sesión</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Iniciar Sesión</a></li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <main class="container mt-4">
        @RenderBody()
    </main>
    <footer class="text-center py-3">
        &copy; @DateTime.Now.Year - Mi Aplicación
    </footer>
</body>
</html>
