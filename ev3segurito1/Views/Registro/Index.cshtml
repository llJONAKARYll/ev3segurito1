@model IEnumerable<ev3segurito1.Models.Registro>

@{
    ViewData["Title"] = "Listado de Registros";
}

<h1>Listado de Registros</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Fecha Creación</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.FechaCreacion.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
