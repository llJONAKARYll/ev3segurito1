@{
    ViewData["Title"] = "Panel de Administración";
}

<h1>Panel de Administración</h1>

<div class="row">
    <div class="col-md-6">
        <h3>Crear Nueva Tabla</h3>
        <form asp-controller="Admin" asp-action="CrearTabla" method="post">
            <div class="form-group">
                <label for="NombreTabla">Nombre de la Tabla</label>
                <input type="text" class="form-control" id="NombreTabla" name="NombreTabla" required />
            </div>
            <button type="submit" class="btn btn-primary mt-3">Crear</button>
        </form>
    </div>

    <div class="col-md-6">
        <h3>Eliminar Registro</h3>
        <form asp-controller="Admin" asp-action="EliminarRegistro" method="post">
            <div class="form-group">
                <label for="NombreTabla">Nombre de la Tabla</label>
                <input type="text" class="form-control" id="NombreTabla" name="NombreTabla" required />
            </div>
            <div class="form-group mt-2">
                <label for="RegistroId">ID del Registro</label>
                <input type="number" class="form-control" id="RegistroId" name="RegistroId" required />
            </div>
            <button type="submit" class="btn btn-danger mt-3">Eliminar</button>
        </form>
    </div>
</div>
