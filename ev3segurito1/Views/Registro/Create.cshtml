@model ev3segurito1.Models.Registro

@{
    ViewData["Title"] = "Crear Registro";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
   
    <div class="form-group">
        <label for="IDUsuario">ID Usuario</label>
        <input asp-for="IDUsuario" class="form-control" id="IDUsuario" />
        <span asp-validation-for="IDUsuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Fecha">Fecha</label>
        <input asp-for="Fecha" class="form-control" id="Fecha" type="date" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Datos">Datos</label>
        <textarea asp-for="Datos" class="form-control" id="Datos"></textarea>
        <span asp-validation-for="Datos" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
</form>

<!-- Validación de cliente -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

